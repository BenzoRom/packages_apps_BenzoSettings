<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/notifications_settings_benzo_title" >

    <com.benzo.settings.preference.SecureSettingSwitchPreference
        android:key="adb_notify"
        android:title="@string/adb_notify_title"
        android:summary="@string/adb_notify_summary"
        android:defaultValue="true" />

    <com.benzo.settings.preference.SystemSettingSwitchPreference
        android:key="battery_fully_charged_notif"
        android:title="@string/battery_fully_charged_notif_title"
        android:summary="@string/battery_fully_charged_notif_summary"
        android:defaultValue="false" />

    <Preference
        android:title="@string/power_notifications_title"
        android:summary="@string/power_notifications_summary">
        <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.PowerNotificationsTunerActivity" />
    </Preference>

    <com.benzo.settings.preference.SystemSettingSwitchPreference
        android:key="force_expanded_notifications"
        android:title="@string/force_expanded_notifications_title"
        android:summary="@string/force_expanded_notifications_summary"
        android:defaultValue="false" />

    <Preference
        android:key="heads_up_settings"
        android:title="@string/heads_up_cat_title"
        android:summary="@string/heads_up_cat_summary"
        android:fragment="com.benzo.settings.headsup.HeadsUpSettings" />

    <com.benzo.settings.preference.SystemSettingSwitchPreference
        android:key="qs_footer_warnings"
        android:title="@string/qs_footer_warnings_title"
        android:summary="@string/qs_footer_warnings_summary"
        android:defaultValue="true" />

    <com.benzo.settings.preference.SystemSettingSwitchPreference
        android:key="toast_icon"
        android:title="@string/toast_icon_title"
        android:summary="@string/toast_icon_summary"
        android:defaultValue="false" />

</PreferenceScreen>
